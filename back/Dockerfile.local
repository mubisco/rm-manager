FROM xbellon/sf-php_81:0.0.2

ARG USER_ID=1000
ARG GROUP_ID=1000
ARG PORT=8000

EXPOSE ${PORT}


WORKDIR /app

RUN mkdir -p /home/jwt
COPY .docker/private.pem /home/jwt
COPY .docker/public.pem /home/jwt

RUN adduser \
  --disabled-password \
  --uid="${USER_ID}" \
  -s /bin/bash gfuser

ENV HOME /home/gfuser
